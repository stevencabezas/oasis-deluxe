# Base de Datos PostgreSQL (Neon)
DB_HOST=your-host.neon.tech
DB_PORT=5432
DB_NAME=oasis_deluxe
DB_USER=neondb_owner
DB_PASSWORD=your-password-here
DATABASE_URL=postgresql://user:password@host.neon.tech/oasis_deluxe?sslmode=require

# Frontend URL (actualizar después de desplegar en Vercel)
FRONTEND_URL=http://localhost:5173

# JWT Secret (generar uno seguro para producción)
# Genera con: openssl rand -base64 32
JWT_SECRET=change-this-to-a-random-string-minimum-32-characters-long
JWT_EXPIRES_IN=7d

# Servidor
PORT=5000
NODE_ENV=development
